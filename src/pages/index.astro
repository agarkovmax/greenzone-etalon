---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import AuditForm from '../components/AuditForm.astro';
import CaseCard from '../components/CaseCard.astro';
import Widget from '../components/Widget.astro';
---

<Layout title="Ускорение загрузки сайта — GreenZone">
  <Hero />
  <AuditForm />
  <section class="py-16 px-4 bg-gray-50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-12">Кейсы: реальные «до/после»</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <CaseCard title="Лендинг" before="47" after="99" result="С ~4.8с до ~1.2с. Конверсия +38%." />
        <CaseCard title="Корпоративный сайт" before="58" after="100" result="CWV в норме, рост органики и заявок." />
        <CaseCard title="Интернет-магазин" before="65" after="98" result="Оптимизация бандла, кеш, изображения." />
      </div>
    </div>
  </section>
  <Widget />
</Layout>
<script is:client>
  // Вибрация
  if ('vibrate' in navigator) {
    if (Math.random() > 0.5) {
      navigator.vibrate([100, 150, 100]); // Пример
    }
  }

  // SEO Time Machine (простая версия)
  function showForecast() {
    alert('Через 3 месяца ваш трафик вырастет на 52%');
  }
</script>
